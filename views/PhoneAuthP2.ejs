<body ononline="onFunction()" onoffline="offFunction()">
<div class="container" style="width: 500px; padding: 0;">
    <h1 style="margin-top: 30px;"><span class="fa fa-list"></span>  Phone Authentication</h1>
    <!-- show any messages that come back with authentication -->
    <p id="falldown">In order to continue, click the <i>Send Verification Code</i> button and enter the code consisting of letters, numbers, and symbols sent to your phone. <br>Then click <strong>Submit</strong>.</p>

    <form action="/psubmit" method="post" id="Psubmit">
        <div class="form-group">
            <input type="text" id="VCode" placeholder="Enter Code Here" class="form-control" name="code" style="height: 50px; margin-bottom: 20px;">
        </div>
    </form>
    <br>
    <button id="pauthSubmit" type="submit" class="button1" onclick="submitForm()"> Submit </button>
    <hr style="margin-bottom: 10px;">
    <p style="text-align: center;"> <a href="/pauth">Didn't Receive the code? Send another one.</a></p>
    <p style="text-align: center;"> <a href="/admindetector">Try Another Way</a></p>
</div>
<br>
<script>
    let username = '<%= user.username %>';
    let userrole = '<%= user.userrole %>';
    let Phone_Number = '<%= Phone_Number %>';
    let VCode = document.getElementById('VCode');


    $(document).ready(function() {


        let today = new Date();
        let date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        let time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
        let dateTime = date + ' ' + time2;
        // document.getElementById("DATE").value = dateTime;



    })
    function submitForm () {
        // console.log($("#ksub").serialize());
        console.log("this");

        if (VCode.value === "") {
            alert("Please make sure the code has been entered.");
        } else {
            console.log("pass");
            $.ajax({
                type: "post",
                url: "/psubmit",
                dataType: 'json',
                data: $("#Psubmit").serialize(),
                success: function (result) {
                    console.log(result);
                }
            })
        }
    }

    function SendCode () {
        $.ajax({
            type: "post",
            url: "/pcode",
            dataType: 'json',
            data: Phone_Number,
            success: function (result) {
                console.log(result);
                alert('Your code has been successfully sent! Please enter the code into the box below.')
                document.getElementById("pauthSubmit").disabled = false;
                document.getElementById("Psubmit").hidden = false;
                document.getElementById("Vcode").disabled = false;
                document.getElementById("Psubmit").style.display = "block";
            }

        })
    }

    function onFunction() {
        alert ("You are now online.");
    }

    function offFunction() {
        alert ("Your are offline. Some functionality may be unavailable.");
    }
</script>
