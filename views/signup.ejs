	<p id="capsWarning" style="color:red; text-align: center;" hidden><strong>WARNING: Caps lock is enabled.</strong></p>
	<form  onsubmit="return checkForm()" action="/signup" method="post" id="signup">
		<div class="form-group">
			<label>Username (email address):</label>
			<input type="email" id="username" class="form-control" name="username" onchange="SearchUsername(this.value)" style="height: 50px;" required>
			<p id="emailUser" style="color: palevioletred;margin-top:15px;"></p>
		</div>
		<div class="form-group">
			<label>First Name:</label>
			<input type="text" id="firstname" class="form-control" name="firstName" style="height: 50px;" required>
		</div>
		<div class="form-group">
			<label>Last Name:</label>
			<input type="text" id="lastname" class="form-control" name="lastName" style="height: 50px;" required>
		</div>
		<div class="form-group">
			<label>Password:</label>
			<input type="password" id="password" class="form-control" name="password" style="height: 50px;" onfocus ="showPassCheck()" required>
		</div>
		<div class="form-group" hidden>
			<label>User Role:</label>
			<br>
			<input type="radio" name="userrole" value="Admin" disabled>
