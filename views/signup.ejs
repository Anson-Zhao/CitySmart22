				<option value="What is the last name of the boy or girl that you first kissed?">What is the last name of the boy or girl that you first kissed?</option>
				<option value="What was the name of the hospital where you were born?">What was the name of the hospital where you were born?</option>
				<option value="Who was your childhood hero?">Who was your childhood hero?</option>
				<option value="What was the last name of your third grade teacher?">What was the last name of your third grade teacher?</option>
				<option value="What was the name of your first pet?">What was the name of your first pet?</option>
				<option value="What\’s your parent\’s birthday?">What’s your parent’s birthday?</option>
				<option value="What was the name of your second pet?">What was the name of your second pet?</option>
				<option value="Where were you on New Year\’s Eve in 2000?">Where were you on New Year’s Eve in 2000?</option>
				<option value="What was your favorite sport in high school?">What was your favorite sport in high school?</option>
				<option value="What is the name of your best friend from childhood?">What is the name of your best friend from childhood?</option>
				<option value="When you were young, what did you want to be when you grew up?">When you were young, what did you want to be when you grew up?</option>
				<option value="What was the name of your first teacher?">What was the name of your first teacher?</option>
				<option value="What is the name of your manager at your first job?">What is the name of your manager at your first job?</option>
				<option value="What is your youngest sibling’s birthday?">What is your youngest sibling’s birthday?</option>
				<option value="What was your first job?">What was your first job?</option>
				<option value="What was the make of your first car?">What was the make of your first car?</option>
			</select>
			<br>
			<label>Answer:</label>
			<input type="text" class="form-control" id="answer1" style="height: 50px;" required>
			<br>
			<label>Security Question #2:</label>
			<br>
			<select id="q2" name="question2" class="form-control" style="height: 50px;" required>
				<option value="" disabled selected>SELECT SECURITY QUESTION</option>
				<option value="In what city or town did your mother and father meet?">In what city or town did your mother and father meet?</option>
				<option value="What is the middle name of your oldest child?">What is the middle name of your oldest child?</option>
				<option value="What was your favorite food as a child?">What was your favorite food as a child?</option>
				<option value="What is the last name of the boy or girl that you first kissed?">What is the last name of the boy or girl that you first kissed?</option>
				<option value="What was the name of the hospital where you were born?">What was the name of the hospital where you were born?</option>
				<option value="Who was your childhood hero?">Who was your childhood hero?</option>
				<option value="What was the last name of your third grade teacher?">What was the last name of your third grade teacher?</option>
				<option value="What was the name of your first pet?">What was the name of your first pet?</option>
				<option value="What\’s your parent\’s birthday?">What’s your parent’s birthday?</option>
				<option value="What was the name of your second pet?">What was the name of your second pet?</option>
				<option value="Where were you on New Year\’s Eve in 2000?">Where were you on New Year’s Eve in 2000?</option>
				<option value="What was your favorite sport in high school?">What was your favorite sport in high school?</option>
				<option value="What is the name of your best friend from childhood?">What is the name of your best friend from childhood?</option>
				<option value="When you were young, what did you want to be when you grew up?">When you were young, what did you want to be when you grew up?</option>
				<option value="What was the name of your first teacher?">What was the name of your first teacher?</option>
				<option value="What is the name of your manager at your first job?">What is the name of your manager at your first job?</option>
				<option value="What is your youngest sibling’s birthday?">What is your youngest sibling’s birthday?</option>
				<option value="What was your first job?">What was your first job?</option>
				<option value="What was the make of your first car?">What was the make of your first car?</option>
			</select>
			<br>
			<label>Answer:</label>
			<input type="text" class="form-control" id="answer2" style="height: 50px;" required>
		</div>
		<div class="form-group" hidden>
			<label>Date Created:</label>
			<input id="DATE" class="form-control date" name="dateCreated" readonly>
		</div>
		<div class="form-group" hidden>
			<label>Created By User:</label>
			<input type="text" id="createdUser" class="form-control" name="createdUser" value="Anonymous" readonly>
		</div>
		<div class="form-group" hidden>
			<label>Status:</label>
			<input type="text" id="status" class="form-control" name="status" value="Pending" readonly>
		</div>
		<div id="showPassword" style="text-align: center;" hidden><input type="checkbox" onclick="showPass()"> Show Password</div>
		<br>
		<div class="container" style="width: 500px; padding: 0px;">
			<button type="submit" class="button1"> Sign Up </button>
		</div>
	</form>
	<hr>
	<p style="margin-left: 190px;">
		Or go back to <a href="/login">Log In</a></p>
</div>
<script>
	let username = document.getElementById("username");
	let firstname = document.getElementById("firstname");
	let lastname = document.getElementById("lastname");
	let password = document.getElementById("password");
	let capsWarning = document.getElementById("capsWarning");
	let showPassword = document.getElementById("showPassword");
	let answer1 = document.getElementById("answer1");
	let answer2 = document.getElementById("answer2");

	username.addEventListener("keydown", function(e) {

		if (e.getModifierState("CapsLock")) {
			capsWarning.hidden = false;
		} else {}
	});
	username.addEventListener("keyup", function(e) {

		if (e.getModifierState("CapsLock")) {}
		else {
			capsWarning.hidden = true;
		}
	});

	firstname.addEventListener("keydown", function(e) {

		if (e.getModifierState("CapsLock")) {
			capsWarning.hidden = false;
		} else {}
	});
	firstname.addEventListener("keyup", function(e) {

		if (e.getModifierState("CapsLock")) {}
		else {
			capsWarning.hidden = true;
		}
	});

	lastname.addEventListener("keydown", function(e) {

		if (e.getModifierState("CapsLock")) {
			capsWarning.hidden = false;
		} else {}
	});
	lastname.addEventListener("keyup", function(e) {

		if (e.getModifierState("CapsLock")) {}
		else {
			capsWarning.hidden = true;
		}
	});

	password.addEventListener("keydown", function(e) {

		if (e.getModifierState("CapsLock")) {
			capsWarning.hidden = false;
		} else {}
	});
	password.addEventListener("keyup", function(e) {

		if (e.getModifierState("CapsLock")) {}
		else {
			capsWarning.hidden = true;
		}
	});

    function showPass() {
		if (password.type === "password") {
			password.type = "text";
		} else {
			password.type = "password";
		}
	}

	function showPassCheck() {
		showPassword.hidden = false;
	}

    $(document).ready(function() {
        $(function() {
            flatpickr(".date", {
                enableTime: true,
                dateFormat: "Y-m-d H:i:S",
                time_24hr: true
            });
		// console.log($('#signup'));
		// console.log($("#signup").serialize());

            $('#signup').submit(function(e) {
                // console.log($("#signup").serialize());
				// console.log($('#signup'));
				let a1 = $('#answer1').val().replace("\'", "\\'");
				let a2 = $('#answer2').val().replace("\'", "\\'");
				let answer1 = "answer1=" + a1;
				let answer2 = "answer2=" + a2;

				// if( $('#q1').val() === '' ) {
				// 	alert('You are required to choose two security questions. Your Security Question #1 seems to be empty.')
				// } else if( $('#q2').val() === '' ) {
				// 	alert('You are required to choose two security questions. Your Security Question #2 seems to be empty.')
				// } else {
					$.ajax({
						type: "post",
						url: "/signup",
						dataType: 'json',
						data: $("#signup").serialize() + "&" + answer1 + "&" + answer2,
						success: function (result) {
							console.log(result);
							if (!result.error) {
								// alert(result.message);
								alert("We are sending you the email verification. Please check it before login to your account.");
								window.location.replace('/login');
								console.log(("#signup").serialize);
							} else {
								alert(result.message);
							}
						}
					})
            });
        });
        let today = new Date();
        let date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        let time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
        let dateTime = date + ' ' + time2;
        document.getElementById("DATE").value = dateTime;
    });

	$('select[name=question1]').on('change', function() {
		var self = this;
		$('select[name=question2]').find('option').prop('disabled', function() {
			return this.value === self.value
		});
	});

	$('select[name=question2]').on('change', function() {
		var self = this;
		$('select[name=question1]').find('option').prop('disabled', function() {
			return this.value === self.value
		});
	});

	function SearchUsername(value) {
		$.ajax({
			url: "SearchUsername",
			method: 'GET',
			dataType: "json",
			success: function (results) {
				for (let i = 0; i < results.length; i++) {
					// let newRes = JSON.stringify(results);
					console.log(value);
					console.log(results[i].username);
					if (value === results[i].username) {
						document.getElementById("emailUser").innerHTML = "This username is already taken. Please use a different one.";
						break;
					} else {
						document.getElementById("emailUser").innerHTML = "";
					}
				}
			}
		})
	}

	function isInputNumber (evt) {
		var char = String.fromCharCode(evt.which);

		if(!(/[0-9]/.test(char))) {
			evt.preventDefault();
		}
	}

	function onFunction() {
		alert ("You are now online.");
	}

	function offFunction() {
		alert ("Your are offline. Some functionality may be unavailable.");
	}

</script>
</body>
</html>