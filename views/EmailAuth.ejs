<body ononline="onFunction()" onoffline="offFunction()">
<div class="container" style="width: 500px; padding: 0;">
    <h1 style="margin-top: 30px;"><span class="fa fa-list"></span>  Email Authentication</h1>
    <!-- show any messages that come back with authentication -->
    <p id="falldown">In order to continue, enter the code consisting of letters, numbers, and symbols sent to your email. <br>Then click <strong>Submit</strong>.</p>
    <div class="form-group">
        <input type="password" id="VCode" placeholder="Enter Code Here" class="form-control" name="code" style="height: 50px; margin-bottom: 20px;" required>
    </div>
    <div id="PusheenIScute" hidden style="text-align: center;"><input type="checkbox" onclick="ShowFunction()"> Show Code</div>
    <br>
    <button id="eauthSubmit" type="submit" class="button1" onclick="submitForm()"><a href="/userhome" id="submite" hidden></a> Submit </button>
    <hr style="margin-bottom: 10px;">
    <p style="text-align: center;"> <a onclick="SendCode()">Didn't receive the code? Send another one.</a></p>
    <p style="text-align: center;">or</p>
    <p style="text-align: center;"> <a href="/admindetector">Try Another Way</a></p>
</div>
<br>
<script>
    let username = '<%= user.username %>';
    let userrole = '<%= user.userrole %>';
    let Code = '<%= Code %>';
    let VCode = $('#VCode');
    let input = document.getElementById("VCode");
    let clickscat = 0;


    $(document).ready(function() {


        let today = new Date();
        let date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        let time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
        let dateTime = date + ' ' + time2;
        // document.getElementById("DATE").value = dateTime;

        function timedRefresh() {
            setTimeout(function(){ window.location.replace("/"); }, 180000);
        }
        timedRefresh();

         alert("Your new code will only be valid for three minutes.");
    })



    function submitForm () {
        // console.log($("#ksub").serialize());
        console.log("this");
        console.log(VCode.val());
        console.log(Code);


        clickscat++;

        if(clickscat > 3) {
            window.location.replace("/");
            alert("Login attempts exceeded!");
        } else {

            window.addEventListener("beforeunload", myFunction);
        }

        if (VCode.val() === "") {
            alert("Please make sure the code has been entered.");
        } else if (VCode.val() === Code) {
            window.removeEventListener("beforeunload", myFunction);
            console.log("pass");
            $('#submite').get(0).click();
            $.ajax({
                type: "get",
                url: "/loginUpdate",
                dataType: 'json'
            })
        } else {
            alert("Invalid code.");
        }
    }

    function thatFunction () {
        document.getElementById("PusheenIScute").hidden = false;
    }

    function ShowFunction() {
        let z = document.getElementById("VCode");
        if (z.type === "password") {
            z.type = "text";
        } else {
            z.type = "password";
        }
    }
    function SendCode() {
        location.reload();
    }
    function myFunction(event) {
        event.returnValue = "Are you sure you want to leave this page? Your code will become invalid.";
    }

    input.addEventListener("keyup", function(event) {
        if (event.keyCode === 13) {
            event.preventDefault();
            submitForm();
        }
    });

    function onFunction() {
        alert ("You are now online.");
    }

    function offFunction() {
        alert ("Your are offline. Some functionality may be unavailable.");
    }
</script>
</body>
